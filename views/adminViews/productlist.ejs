<%- include('../adminPartials/header') %>



    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Products List</h2>
                <p>Lorem ipsum dolor sit amet.</p>
            </div>
            <div>
                <!-- <a href="#" class="btn btn-light rounded font-md">Export</a>
                <a href="#" class="btn btn-light rounded  font-md">Import</a> -->
                <a href="/addProduct" class="btn btn-primary btn-sm rounded">Add new product</a>
            </div>
        </div>
        <div class="card mb-4">
           
            <div class="card-body">

                <table id="example" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Parent Category</th>
                            <th>Product Image1</th>
                            <th>Product Image2</th>
                            <th>Product Image3</th>
                            <th>Price in INR</th>
                            <th>In stock</th>
                            <th>List/Unlist</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                       
                        <% productData.reverse().forEach(function(product, index) { %>
                            <tr>
                                <td>
                                    <%= product.productName %>
                                </td>
                                <td>
                                    <%= product.parentCategory %>
                                </td>
                                <td><img src="/upload/<%= product.productImage1 %>" alt=""
                                        style="width: 100px; height: 100px"></td>
                                <td><img src="/upload/<%= product.productImage2 %>" alt=""
                                        style="width: 100px; height: 100px"></td>
                                <td><img src="/upload/<%= product.productImage3 %>" alt=""
                                        style="width: 100px; height: 100px"></td>
                                <td>â‚¹<%= product.productPrice %>
                                </td>
                                <td>
                                    <%= product.productStock %>
                                </td>



                                <% if (product.isListed) { %>
                                    <td>
                                        <form action="/unlist/<%= product._id %>" method="POST">
                                            <button type="submit" class="btn btn-success">Unlist</button>
                                        </form>
                                    </td>
                                    <% } else { %>
                                        <td>
                                            <form action="/list/<%= product._id %>" method="POST">
                                                <button type="submit" class="btn btn-danger">List</button>
                                            </form>
                                        </td>
                                        <% } %>


                                            <td>





                                                <a href="/productEdit/<%= product._id %>"
                                                    class="btn btn-primary btn-sm rounded">edit</a>








                                                <!-- <button type="button" class="btn btn-info" data-bs-toggle="modal"
                                        data-bs-target="#editModal<%= index %>">
                                        <i class="fas fa-edit"></i>
                                    </button> -->

                                                <a class="btn btn-info"
                                                    onclick="return deleteConfirmation('<%= product.categoryName %>', '<%= product._id %>')"
                                                    href="#">
                                                    <i class="fa fa-trash" aria-hidden="true"></i>Delete
                                                </a>

                                                <script>
                                                    function deleteConfirmation(categoryName, productId) {
                                                        if (confirm(`Are you sure you want to delete ${categoryName} product?`)) {
                                                            window.location.href = `/deleteProduct/${productId}`;
                                                            return true;
                                                        }
                                                        return false;
                                                    }
                                                </script>





                                            </td>
                            </tr>
                            <% }); %>

                    </tbody>
                </table>
























            </div> <!-- card-body end// -->


        </div> <!-- card end// -->
