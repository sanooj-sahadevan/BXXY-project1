                                    </div>

                                    <div class="input-group mb-3">
                                        <label class="container">
                                            <span>Select Parent Category</span>
                                            <select name="parentCategory" class="form-select"
                                                aria-label="Default select example">
                                                <% categories.forEach((value)=>{ %>
