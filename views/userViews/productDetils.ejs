    <script>
        function changeImg(clickedImg) {
            let image = document.getElementById("disp-img");
            image.src = clickedImg.getAttribute('data-image');
            // Optional: Update the zoom image source if needed
            image.setAttribute('data-zoom-image', clickedImg.getAttribute('data-zoom-image'));
            // Re-initialize ElevateZoom on the main image
            $('#disp-img').elevateZoom({
                cursor: "crosshair",
                easing: true,
            });
        }
        $(document).ready(function () {
            $(".zoom-img").elevateZoom({
                cursor: "crosshair",
                easing: true,
            });
        });
    </script>








