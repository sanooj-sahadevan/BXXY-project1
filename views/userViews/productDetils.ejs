        <script>
            // Get reference to the main image and the thumbnail images
            const mainImage = document.getElementById('product-zoom');
            const thumbnailImages = document.querySelectorAll('.product-gallery-item');

            // Loop through thumbnail images and attach click event listeners
            thumbnailImages.forEach(thumbnail => {
                thumbnail.addEventListener('click', function (event) {
                    event.preventDefault(); // Prevent default link behavior

                    // Get the URL of the clicked thumbnail image
                    const imageURL = this.getAttribute('data-image');

                    // Update the source of the main image
                    mainImage.src = imageURL;
                    mainImage.setAttribute('data-zoom-image', this.getAttribute('data-zoom-image'));
                });
            });
        </script>





















